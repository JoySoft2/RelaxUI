<Button x:Class="RelaxUI.GombIkonos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:RelaxUI"
        mc:Ignorable="d" 
        x:Name="gombikonos"
        d:DesignHeight="24" d:DesignWidth="200">

    <StackPanel Orientation="Horizontal">
        <Image Source="{Binding Ikon, ElementName=gombikonos, Mode=OneWay}" Margin="{Binding IkonMargo, ElementName=gombikonos, Mode=OneWay}" Stretch="None" VerticalAlignment="Top" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        <TextBlock Text="{Binding Szoveg, ElementName=gombikonos, Mode=OneWay}"/>
    </StackPanel>
</Button>
